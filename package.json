{
  "name": "circuitpythonsync",
  "displayName": "CircuitPythonSync",
  "description": "Sync files from pc to board for CP",
  "version": "0.0.8",
  "publisher": "standsi",
  "license":"MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/standsi/circuitpythonsync.git"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "circuitpython",
    "adafruit",
    "python"
  ],
  "activationEvents": [
    "workspaceContains:/code.py",
    "workspaceContains:/main.py",
    "workspaceContains:/lib/**",
    "workspaceContains:/Lib/**"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "circuitpythonsync.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "circuitpythonsync.button1",
        "title": "CP Button1"
      },
      {
        "command": "circuitpythonsync.button2",
        "title": "CP Button2"
      },
      {
        "command": "circuitpythonsync.opendir",
        "title": "CP Set Drive"
      },
      {
        "command": "circuitpythonsync.mngcpfiles",
        "title": "CP Manage Lib"
      }
    ],
    "configuration":{     
        "title": "CircuitPython Sync",
        "properties": {
          "circuitpythonsync.drivepath": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "Last path saved for the attached board. Intended to be set at the workspace level.",
            "scope": "window"
          }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@types/drivelist": "6.4.4"
  },
  "dependencies": {
    "drivelist": "^12.0.2"
  }
}
